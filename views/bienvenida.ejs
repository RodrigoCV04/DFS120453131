<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suma</title>
    <script>
        function bienvenida(){
            alert("Bienvenido");
        }
        bienvenida();
        function calculars(){
            var a = document.getElementById('a').value;
            var b = document.getElementById('b').value; 
            c= parseInt(a) + parseInt(b);
            alert("El resultado es " + c)
            console.log (a)
            console.log(b)
            console.log ("El resultado es" + c)
        }


        function calcularr(){
            var a = document.getElementById('a').value;
            var b = document.getElementById('b').value; 
            c= parseInt(a) - parseInt(b);
            alert("El resultado es " + c)
            console.log (a)
            console.log(b)
            console.log ("El resultado es" + c)
        }

        function calcularm(){
            var a = document.getElementById('a').value;
            var b = document.getElementById('b').value; 
            c= parseInt(a) * parseInt(b);
            alert("El resultado es " + c)
            console.log (a)
            console.log(b)
            console.log ("El resultado es" + c)
        }

        function calculard(){
                var a = document.getElementById('a').value;
                var b = document.getElementById('b').value; 
                c= parseInt(a) / parseInt(b);
                alert("El resultado es " + c)
                console.log (a)
                console.log(b)
                console.log ("El resultado es" + c)
            }
    </script>
</head>
<body>
    <h1>Calculadora</h1><br>
    <div>
        <label for="a">Ingresa el primer valor </label>
        <input type="number" name="a" id="a">
        <br>
        <label for="b">Ingresa el segundo valor </label>
        <input type="number" name="b" id="b">
        <br><br>
        <button onClick="calculars()" id="calculars"> Sumar </button><br>
        <button onClick="calcularr()" id="calcularr"> Restar </button><br>
        <button onClick="calcularm()" id="calcularm"> Multiplicar </button><br>
        <button onClick="calculard()" id="calculard"> Dividir </button><br>
    </div>

    
        
</body>
</html>